{
    "manifest_version": 3,
    "name": "TimeWizard",
    "description": "Seamlessly Track & Manage Your Time Online with site timers and notifications.",
    "version": "1.0",
    "permissions": [
      "notifications",
      "storage",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/logo16.png",
        "48": "icons/logo48.png",
        "128": "icons/logo128.png"
      }
    },
    "icons": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://*/*" 
        ],
        "js": ["main.js"]
      }
    ]
  }
  